<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3d3d3"
    android:orientation="vertical"
    tools:context=".FormFrag">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="match_parent"
            android:layout_height="200sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size of Trash"
            android:textSize="18sp"
            android:layout_margin="13sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/IB_size_bag"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:src="@drawable/garbagebag"
                android:scaleType="fitCenter"
                android:padding="12sp"
                android:background="@drawable/round_button"/>
            <ImageButton
                android:id="@+id/IB_size_trolley"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:src="@drawable/trolley"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:scaleType="fitCenter"
                android:padding="10sp"
                android:background="@drawable/round_button"/>
            <ImageButton
                android:id="@+id/IB_size_truck"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:src="@drawable/garbagetruck"
                android:scaleType="fitCenter"
                android:padding="12sp"
                android:background="@drawable/round_button"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fits in bag"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:gravity="center"
                android:text="fits in \nWheelborrow"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car needed"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type of Trash"
            android:textSize="18sp"
            android:layout_margin="13sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/IB_house"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:src="@drawable/cleaningtoolsdark"
                android:scaleType="fitCenter"
                android:padding="12sp"
                android:background="@drawable/round_button"/>
            <ImageButton
                android:id="@+id/IB_auto"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:src="@drawable/brakedark"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:scaleType="fitCenter"
                android:padding="10sp"
                android:background="@drawable/round_button"/>
            <ImageButton
                android:id="@+id/IB_cons"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:src="@drawable/garbage"
                android:scaleType="fitCenter"
                android:padding="12sp"
                android:background="@drawable/round_button"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Household"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:gravity="center"
                android:text="Automotive"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Construction"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/IB_plas"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:src="@drawable/plastic"
                android:scaleType="fitCenter"
                android:padding="12sp"
                android:background="@drawable/round_button"/>
            <ImageButton
                android:id="@+id/IB_elec"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:src="@drawable/tvdark"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:scaleType="fitCenter"
                android:padding="10sp"
                android:background="@drawable/round_button"/>
            <ImageButton
                android:id="@+id/IB_org"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:src="@drawable/trashbin"
                android:scaleType="fitCenter"
                android:padding="12sp"
                android:background="@drawable/round_button"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plastic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="35sp"
                android:gravity="center"
                android:text="Electronics"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organic"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/IB_met"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:src="@drawable/rubbishdark"
                android:scaleType="fitCenter"
                android:padding="12sp"
                android:background="@drawable/round_button"/>
            <ImageButton
                android:id="@+id/IB_liq"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:src="@drawable/kerosene"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:scaleType="fitCenter"
                android:padding="10sp"
                android:background="@drawable/round_button"/>
            <ImageButton
                android:id="@+id/IB_tox"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:src="@drawable/toxic"
                android:scaleType="fitCenter"
                android:padding="12sp"
                android:background="@drawable/round_button"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:gravity="center"
                android:text="Liquid"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toxic"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/IB_ani"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:src="@drawable/deadbirddark"
                android:scaleType="fitCenter"
                android:padding="12sp"
                android:background="@drawable/round_button"/>
            <ImageButton
                android:id="@+id/IB_glas"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:src="@drawable/bottle"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:scaleType="fitCenter"
                android:padding="10sp"
                android:background="@drawable/round_button"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Animal Carcass"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="70sp"
                android:gravity="center"
                android:text="Glass"/>
            />

        </LinearLayout>


        <Button
            android:id="@+id/btn_submit"
            android:layout_margin="20sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report"
            android:padding="10sp"/>
    </LinearLayout>
</ScrollView>